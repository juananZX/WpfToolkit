<UserControl 
  x:Class="WpfTestApplication.ValidatorsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:WpfTestApplication"
  xmlns:wpfToolkit="clr-namespace:Espamatica.WpfToolkit;assembly=Espamatica.WpfToolkit" 
  d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800">
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="10" />
      <ColumnDefinition Width="100" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock
      Grid.Column="0"
      Grid.Row="0"
      FontSize="18"
      FontWeight="Bold"
      Text="Validator">
    </TextBlock>

    <CheckBox
      x:Name="EnableValidations"
      Grid.Column="2"
      Grid.ColumnSpan="3"
      Grid.Row="0"
      IsChecked="True"
      Content="Enable validations">
    </CheckBox>

    <!--#region Field validator, mandatory -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="2"
      Text="Mandatory text">
    </TextBlock>

    <wpfToolkit:FieldValidator
      Grid.Column="1"
      Grid.Row="2"
      Field="{Binding Path=Entity.MandatoryText}"
      IsValid="{Binding Path=IsValidMandatoryText, Mode=OneWayToSource}"
      ToolTip="This is a mandatory field">
    </wpfToolkit:FieldValidator>

    <TextBox
      Grid.Column="2"
      Grid.Row="2"
      MaxLength="20"
      Text="{Binding Path=Entity.MandatoryText, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="FieldValidator">
    </TextBox>
    <!--#region -->

    <!--#region Type validator Int16, mandatory -->
    <TextBlock
      Grid.Column="4"
      Grid.Row="2"
      Text="Mandatory short">
    </TextBlock>

    <wpfToolkit:TypeValidator
      Grid.Column="5"
      Grid.Row="2"
      Field="{Binding Path=Entity.MandatoryInt16}"
      IsValid="{Binding Path=IsValidMandatoryShort, Mode=OneWayToSource}"
      ToolTip="This is a mandatory Int16 field"
      TypeField="System.Int16">
    </wpfToolkit:TypeValidator>

    <TextBox
      Grid.Column="6"
      Grid.Row="2"
      MaxLength="6"
      Text="{Binding Path=Entity.MandatoryInt16, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Mandatory TypeValidator">
    </TextBox>
    <!--#endregion-->

    <!--#region Type validator Int16, optional -->
    <TextBlock
      Grid.Column="8"
      Grid.Row="2"
      Text="Optional short">
    </TextBlock>

    <wpfToolkit:TypeValidator
      Grid.Column="9"
      Grid.Row="2"
      Field="{Binding Path=Entity.OptionalInt16}"
      IsMandatory="False"
      IsValid="{Binding Path=IsValidOptionalShort, Mode=OneWayToSource}"
      ToolTip="This is a optional Int16 field"
      TypeField="System.Int16">
    </wpfToolkit:TypeValidator>

    <TextBox
      Grid.Column="10"
      Grid.Row="2"
      MaxLength="6"
      Text="{Binding Path=Entity.OptionalInt16, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Optional TypeValidator">
    </TextBox>
    <!--#region -->

    <!--#region Field validator with numeric text box, mandatory -->
    <TextBlock
      Grid.Column="12"
      Grid.Row="2"
      Text="Mandatory %">
    </TextBlock>

    <wpfToolkit:FieldValidator
      Grid.Column="13"
      Grid.Row="2"
      Field="{Binding Path=Entity.MandatoryPercentage}"
      IsValid="{Binding Path=IsValidMandatoryPercentage, Mode=OneWayToSource}"
      ToolTip="This is a mandatory percentage field">
    </wpfToolkit:FieldValidator>

    <wpfToolkit:NumericTextBox
      Grid.Column="14"
      Grid.Row="2"
      Decimals="2"
      MinValue="0"
      MaxValue="100"
      Text="{Binding Path=Entity.MandatoryPercentage, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="FieldValidator and NumericTextBox">
    </wpfToolkit:NumericTextBox>
    <!--#endregion-->

    <!--#region Range validator, type DateTime, mandatory -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="4"
      Text="Mandatory date from">
    </TextBlock>

    <wpfToolkit:RangeValidator
      Grid.Column="1"
      Grid.Row="4"
      Field="{Binding Path=Entity.MandatoryDateFrom}"
      IsValid="{Binding Path=IsValidMandatoryDateFrom, Mode=OneWayToSource}"
      MinValue="01/01/1900"
      MaxValue="31/12/2099"
      ToolTip="Date between 01/01/1900 and 31/12/2099"
      TypeField="System.DateTime">
    </wpfToolkit:RangeValidator>

    <TextBox
      Grid.Column="2"
      Grid.Row="4"
      MaxLength="10"
      Text="{Binding Path=Entity.MandatoryDateFrom, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Mandatory RangeValidator">
    </TextBox>
    <!--#endregion -->

    <!--#region ComparisonValidator, type DateTime, optional -->
    <TextBlock
      Grid.Column="4"
      Grid.Row="4"
      Text="Optional date to">
    </TextBlock>

    <wpfToolkit:ComparisonValidator
      Grid.Column="5"
      Grid.Row="4"
      IsMandatory="False"
      ComparisonOperator="EqualOrGraterThan"
      Field="{Binding Path=Entity.MandatoryDateFrom}"
      Field2="{Binding Path=Entity.OptionalDateTo}"
      IsValid="{Binding Path=IsValidOptionalDateTo, Mode=OneWayToSource}"
      ToolTip="Date greater than or equal to 'Mandatory date from'"
      TypeField="System.DateTime">
    </wpfToolkit:ComparisonValidator>

    <TextBox
      Grid.Column="6"
      Grid.Row="4"
      MaxLength="10"
      Text="{Binding Path=Entity.OptionalDateTo, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Optional ComparisonValidator">
    </TextBox>
    <!--#endregion-->

    <!--#region RegularExpressionVaidator, optional -->
    <TextBlock
      Grid.Column="8"
      Grid.Row="4"
      Text="Optional e-mail">
    </TextBlock>

    <wpfToolkit:RegularExpressionValidator
      Grid.Column="9"
      Grid.Row="4"
      Field="{Binding Path=Entity.OptionalEmail}"
      IsMandatory="False"
      IsValid="{Binding Path=IsValidOptionalEmail, Mode=OneWayToSource}"
      Pattern="{Binding Path=EmailPattern}"
      ToolTip="Invalid e-mail">
    </wpfToolkit:RegularExpressionValidator>

    <TextBox
      Grid.Column="10"
      Grid.Row="4"
      MaxLength="30"
      Text="{Binding Path=Entity.OptionalEmail, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Optional RegularExpressionValidator">
    </TextBox>
    <!--#endregion-->

    <!--#region RangeValidator, type Decimal, optional -->
    <TextBlock
      Grid.Column="12"
      Grid.Row="4"
      Text="Between -1 and 1">
    </TextBlock>

    <wpfToolkit:RangeValidator
      Grid.Column="13"
      Grid.Row="4"
      Field="{Binding Path=Entity.Between1and1}"
      IsMandatory="False"
      IsValid="{Binding Path=IsValidBetween1and1, Mode=OneWayToSource}"
      MaxValue="1"
      MinValue="-1"
      ToolTip="Value between -1 and 1"
      TypeField="System.Decimal">
    </wpfToolkit:RangeValidator>

    <TextBox
      Grid.Column="14"
      Grid.Row="4"
      MaxLength="20"
      Text="{Binding Path=Entity.Between1and1, UpdateSourceTrigger=PropertyChanged}"
      ToolTip="Optional RangeValidator">
    </TextBox>
    <!--#endregion-->

    <TextBlock
      Grid.Column="0"
      Grid.ColumnSpan="15"
      Grid.Row="6"
      FontSize="18"
      FontWeight="Bold"
      Text="NumericTexBox">
    </TextBlock>

    <!-- #region NumericTextBox byte -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="8"
      Text="byte (8 bits)">
    </TextBlock>

    <wpfToolkit:NumericTextBox
      Grid.Column="2"
      Grid.Row="8"
      MinValue="0"
      MaxValue="255"
      Text="{Binding Path=Entity.Int8Bits}"
      ToolTip="Between 0 and 255">
    </wpfToolkit:NumericTextBox>
    <!--#endregion-->

    <!--#region NumericTextBox short -->
    <TextBlock
      Grid.Column="4"
      Grid.Row="8"
      Text="short (16 bits)">
    </TextBlock>

    <wpfToolkit:NumericTextBox
      Grid.Column="6"
      Grid.Row="8"
      MinValue="-32768"
      MaxValue="32767"
      Text="{Binding Path=Entity.Int16Bits}"
      ToolTip="Between -32768 and 32767">
    </wpfToolkit:NumericTextBox>

    <TextBlock
      Grid.Column="8"
      Grid.Row="8"
      Text="int (32 bits)">
    </TextBlock>

    <wpfToolkit:NumericTextBox
      Grid.Column="10"
      Grid.Row="8"
      MinValue="-2147483648"
      MaxValue="2147483647"
      Text="{Binding Path=Entity.Int32Bits}"
      ToolTip="Between -2147483648 and 2147483647">
    </wpfToolkit:NumericTextBox>
    <!--#endregion-->

    <!--#region NumericTextBox decimal -->
    <TextBlock
      Grid.Column="12"
      Grid.Row="8"
      Text="Currency (10.3)">
    </TextBlock>

    <wpfToolkit:NumericTextBox
      Grid.Column="14"
      Grid.Row="8"
      Decimals="3"
      MinValue="0"
      MaxValue="9999999999"
      Text="{Binding Path=Entity.Currency}"
      ToolTip="Between 0 and 9999999999">
    </wpfToolkit:NumericTextBox>
    <!--#endregion-->

    <TextBlock
      Grid.Column="0"
      Grid.ColumnSpan="15"
      Grid.Row="10"
      FontSize="18"
      FontWeight="Bold"
      Text="RegexTexBox (internal validations)">
    </TextBlock>

    <!--#region RegexTextBox, internal validations -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="12"
      Text="Web site">
    </TextBlock>

    <wpfToolkit:RegexTextBox
      Grid.Column="2"
      Grid.ColumnSpan="5"
      Grid.Row="12"
      IsValid="{Binding Path=IsValidWebSitePattern, Mode=OneWayToSource}"
      Pattern="{Binding Path=WebSitePattern}"
      Text="{Binding Path=Entity.WebSite}">
    </wpfToolkit:RegexTextBox>

    <TextBlock
      Grid.Column="8"
      Grid.Row="12"
      Text="E-mail">
    </TextBlock>

    <wpfToolkit:RegexTextBox
      Grid.Column="10"
      Grid.ColumnSpan="5"
      Grid.Row="12"
      IsValid="{Binding Path=IsValidEmailPattern, Mode=OneWayToSource}"
      Pattern="{Binding Path=EmailPattern}"
      Text="{Binding Path=Entity.Email}">
    </wpfToolkit:RegexTextBox>
    <!--#endregion-->

    <TextBlock
      Grid.Column="0"
      Grid.ColumnSpan="15"
      Grid.Row="14"
      FontSize="18"
      FontWeight="Bold"
      Text="MediaTimeTexBox">
    </TextBlock>

    <!--#region MediaTimeTextBox -->
    <TextBlock
      Grid.Column="0"
      Grid.Row="16"
      Text="HH:mm:ss:mmm">
    </TextBlock>

    <wpfToolkit:MediaTimeTextBox
      Grid.Column="2"
      Grid.Row="16"
      FractionsPerSecond="1000"
      Text="{Binding Path=Entity.HHmmssmmm}"
      TimeFormat="HHmmssmmm">
    </wpfToolkit:MediaTimeTextBox>

    <TextBlock
      Grid.Column="4"
      Grid.Row="16"
      Text="HH:mm:ss:ff">
    </TextBlock>

    <wpfToolkit:MediaTimeTextBox
      Grid.Column="6"
      Grid.Row="16"
      FractionsPerSecond="25"
      Text="{Binding Path=Entity.HHmmssff}"
      TimeFormat="HHmmssff"
      ToolTip="25 frames per second"
      Width="95">
    </wpfToolkit:MediaTimeTextBox>

    <TextBlock
      Grid.Column="8"
      Grid.Row="16"
      Text="ss.mmm">
    </TextBlock>

    <wpfToolkit:MediaTimeTextBox
      Grid.Column="10"
      Grid.Row="16"
      FractionsPerSecond="1000"
      Text="{Binding Path=Entity.SSmmm}"
      TimeFormat="ssmmm"
      Width="50">
    </wpfToolkit:MediaTimeTextBox>

    <TextBlock
      Grid.Column="12"
      Grid.Row="16"
      Text="HH:mm">
    </TextBlock>

    <wpfToolkit:MediaTimeTextBox
      Grid.Column="14"
      Grid.Row="16"
      FractionsPerSecond="1000"
      Text="{Binding Path=Entity.HHmm}"
      TimeFormat="HHmm"
      Width="40">
    </wpfToolkit:MediaTimeTextBox>
    <!--#endregion-->

    <Button
      Grid.Column="0"
      Grid.Row="18"
      Content="Accept"
      Command="{Binding Path=AcceptCommand}">
    </Button>

    <Button
      Grid.Column="2"
      Grid.Row="18"
      Content="Cancel"
      Command="{Binding Path=CancelCommand}">
    </Button>
  </Grid>
</UserControl>
