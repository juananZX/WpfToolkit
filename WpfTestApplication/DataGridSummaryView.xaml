<UserControl 
  x:Class="WpfTestApplication.DataGridSummaryView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:WpfTestApplication"
  xmlns:wpfToolkit="clr-namespace:Espamatica.WpfToolkit;assembly=Espamatica.WpfToolkit"
  xmlns:sdg="clr-namespace:Espamatica.WpfToolkit;assembly=Espamatica.WpfToolkit"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>

    <DataGrid
      x:Name="DataGrid"
      Grid.Row="0"
      IsReadOnly="True">

      <DataGrid.Columns>
        <DataGridTextColumn
          Header="Origin"
          Binding="{Binding Origin}"
          Width="250"
          sdg:DataGridSummary.DoSummary="True"
          sdg:DataGridSummary.SummaryType="Count"
          sdg:DataGridSummary.SummaryPrefix="Rows: ">
        </DataGridTextColumn>
        
        <DataGridTextColumn
          Header="Destination"
          Binding="{Binding Destination}"
          Width="250">
        </DataGridTextColumn>
        
        <DataGridTextColumn
          Header="Price"
          Binding="{Binding Price, StringFormat=C}"
          TextBlock.TextAlignment="Right"
          Width="150">
        </DataGridTextColumn>
        
        <DataGridTextColumn
          Header="Quantity"
          Binding="{Binding Quantity}"
          TextBlock.TextAlignment="Right"
          Width="100">
        </DataGridTextColumn>

        <DataGridTextColumn
          Header="Amount"
          Binding="{Binding Amount, StringFormat=C}"
          TextBlock.TextAlignment="Right"
          Width="150">
        </DataGridTextColumn>
      </DataGrid.Columns>
    </DataGrid>

    <wpfToolkit:DataGridSummary
      Grid.Row="1"
      Height="20"
      OwnerDataGrid="{Binding ElementName=DataGrid}"
      Background="Red">
    </wpfToolkit:DataGridSummary>
  </Grid>
</UserControl>
