<UserControl 
  x:Class="Espamatica.WpfToolkit.MediaTimeTextBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:Espamatica.WpfToolkit"
  mc:Ignorable="d" 
  d:DesignHeight="27"
  d:DesignWidth="125"
  
  HorizontalContentAlignment="Center"
  PreviewKeyDown="TextBox_PreviewKeyDown">

  <UserControl.Resources>
    <Style TargetType="TextBlock">
      <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=Background}"></Setter>
      <Setter Property="FontFamily" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontFamily}"></Setter>
      <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontSize}"></Setter>
      <Setter Property="FontStretch" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontStretch}"></Setter>
      <Setter Property="FontStyle" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontStyle}"></Setter>
      <Setter Property="FontWeight" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontWeight}"></Setter>
      <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=Foreground}"></Setter>
      <Setter Property="Margin" Value="1,0"></Setter>
      <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

    <Style TargetType="TextBox">
      <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=Background}"></Setter>
      <Setter Property="BorderThickness" Value="0"></Setter>
      <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontSize}"></Setter>
      <Setter Property="FontStretch" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontStretch}"></Setter>
      <Setter Property="FontStyle" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontStyle}"></Setter>
      <Setter Property="FontWeight" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=FontWeight}"></Setter>
      <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=Foreground}"></Setter>
      <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
      <Setter Property="IsReadOnly" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}, Path=IsReadOnly}"></Setter>
      <Setter Property="MaxLength" Value="2"></Setter>
      <Setter Property="Text" Value="00"></Setter>
      <Setter Property="TextAlignment" Value="Right"></Setter>
      <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
      <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
    </Style>
  </UserControl.Resources>

  <Viewbox>
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
      </Grid.ColumnDefinitions>

      <TextBox
        x:Name="HoursBox"
        Grid.Column="0"
            
        PreviewMouseWheel="TextBox_PreviewMouseWheel"
        TextChanged="TextBox_TextChanged">
      </TextBox>

      <TextBlock
        x:Name="MinutesSeparator"
        Grid.Column="1"
        Text=":">
      </TextBlock>

      <TextBox
        x:Name="MinutesBox"
        Grid.Column="2"
            
        PreviewMouseWheel="TextBox_PreviewMouseWheel"
        TextChanged="TextBox_TextChanged">
      </TextBox>

      <TextBlock
        x:Name="SecondsSeparator"
        Grid.Column="3"
        Text=":">
      </TextBlock>

      <TextBox
        x:Name="SecondsBox"
        Grid.Column="4"
            
        PreviewMouseWheel="TextBox_PreviewMouseWheel"
        TextChanged="TextBox_TextChanged">
      </TextBox>

      <TextBlock
        x:Name="FractionsSeparator"
        Grid.Column="5"
        Text=".">
      </TextBlock>

      <TextBox
        x:Name="FractionsBox"
        Grid.Column="6"
            
        PreviewMouseWheel="TextBox_PreviewMouseWheel"
        TextChanged="TextBox_TextChanged">
      </TextBox>
    </Grid>
  </Viewbox>
</UserControl>
